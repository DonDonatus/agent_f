{
  "compilerOptions": {
    // Next.js Defaults
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
        "skipLibCheck": true
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // Added for script support
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "types": [
      "react",
      "react-dom",
      "next-auth"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/next-auth.d.ts",
    "scripts/**/*.ts",
    "types",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
